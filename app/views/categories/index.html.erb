<% provide(:title, 'All Categories') %>
<h1>All Categories</h1>

<div class="row">
  <div class="span6 offset3 content_frame">
    <ul class="categories">
      <% @categories.each do |category| %>
      <li>
        <%= link_to category.name, category %>
      </li>
      <% end %>
    </ul>
  </div>
</div>
