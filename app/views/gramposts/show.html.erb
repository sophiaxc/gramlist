<%= provide(:title, @grampost.title) %>

<div class="row">
  <div class="span6 offset3">
      <h1>
        <%= @grampost.title %>
      </h1>
        <span class="photo_frame">
          <div class="gram_image">
              <%= link_to photo_for(@grampost, size: :large), @grampost %>
              <h2 class="price">
                <span class="ribbon">
                  <%= link_to "$ %s" % number_with_delimiter(
                      @grampost.price, :delimiter => ','), @grampost %>
                </span>
              </h2>
            </div>
        </span>
    <span class="grampost_text">
      <span class="timestamp">
        Posted <%= time_ago_in_words(@grampost.created_at) %> ago
        by  <%= link_to @grampost.user.name, @grampost.user %>.
      </span>
      <br>
      <% if current_user?(@grampost.user) %>
        <%= link_to "delete", @grampost, method:  :delete,
                                        confirm: "You sure?",
                                        title:   @grampost.title %> |
        <%= link_to "edit", edit_grampost_path(@grampost) %>
      <% end %>
    </span>
  </div>
</div>
